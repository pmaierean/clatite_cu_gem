<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- output to console -->
	<appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{dd MMM yyyy HH:mm:ss,SSS}],[%-5p],[%t] (%C:%L), %m%n"/>
		</layout>
	</appender>

	<!-- output to file -->

	<appender name="fileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- eg: TL_onlinePayout.log -->
		<param name="File" value="/opt/local/logger/sample/ehcache/application.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{dd MMM yyyy HH:mm:ss,SSS}],[%t%n],[%-5p],[%t] (%F:%L), %m%n" />
		</layout>
	</appender>

	<appender name="applicationAppender" class="org.apache.log4j.AsyncAppender">
		<appender-ref ref="fileAppender" />
	</appender>
	
	<logger name="com.maiereni.ehcache2">
		<level value="debug" />
	</logger>
		
	<logger name="net.sf.ehcache">
		<level value="debug" />	
	</logger>

	<logger name="org.jgroups">
		<level value="debug" />	
	</logger>

	<logger name="org.glassfish.jersey">
		<level value="error" />	
	</logger>

	<logger name="org.springframework">
		<level value="error" />	
	</logger>
	
	<root>
		<level value="error"></level>
		<appender-ref ref="consoleAppender"/>
		<appender-ref ref="applicationAppender"/>
	</root>
	
</log4j:configuration> 